<div class="login-container">
  <div class="card">
    <header class="login-header">
      <h2 class="login-title text-uppercase">Login</h2>
    </header>
    <div class="login-content">
      <form id="login-form"  action="/index.html" method="GET" novalidate="">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Your email address" required>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-block btn-success">Reset my password</button>
        </div>
        <div class="form-group text-xs-center">
          <p class="text-muted">-- or --</p>
          <p><a href="index.html">Login</a></p>
        </div>
      </form>
    </div>
  </div>
</div>
